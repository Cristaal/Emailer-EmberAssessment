<h1>Send an Email</h1>
<div class="row">
  <div class="col-md-6">
    <p>Want to send an email to someone?</p>
    <h1>New Email Message</h1>

    <form>
      <div class="form-group">
        <label for="address">Email Address</label>
        {{input id="address" class="form-control" value=address}}
      </div>
      <div class="form-group">
        <label for="subject">Subject</label>
        {{input id="subject" class="form-control" value=subject}}
      </div>

      <div class="form-group">
        <label for="body">Body</label>
        {{textarea id="body" class="form-control" rows="15" value=body}}
      </div>

      <button class="btn btn-primary" {{action "sendMessage"}}>Send</button>

    </form>


    {{#if messageSent}}
    <p>Thank you. Your message has been sent.
      Your confirmation number is {{confirmationNumber}}.</p>
    {{/if}}
  </div>
    <div class="col-md-6">
      {{outlet}}
    </div>
</div>

