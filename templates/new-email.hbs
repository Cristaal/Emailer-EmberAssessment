<h1>New Email Message</h1>
<form>
  <div class="form-group">
    <label for="address">Your Email Address</label>
    {{input id="address" class="form-control" value=address}}
  </div>
  <div class="form-group">
    <label for="subject">Subject</label>
    {{input id="subject" class="form-control" value=subject}}
  </div>

  <div class="form-group">
    <label for="body">Body</label>
    {{textarea id="body" class="form-control" rows="15" value=body}}
  </div>

  <button class="btn btn-primary" {{action "save"}}>Save</button>

</form>
